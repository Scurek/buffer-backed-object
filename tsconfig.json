{
  "compilerOptions": {
    "target": "es2017",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "skipLibCheck": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "outFile": "dist/buffer-backed-object.d.ts",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": false,
    "allowJs": true,
    "checkJs": true,
    "types": []
  },
  "include": ["buffer-backed-object.ts"]
}
